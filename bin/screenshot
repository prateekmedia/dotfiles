#! /bin/sh

full="1. Fullscreen"
gui="2. Flameshot GUI"
launcher="3. Interactive Launcher"

chosen=$(printf "$full\n$gui\n$launcher" | rofi -dmenu -i -p "Screenshot")
case "$chosen" in
        $full) flameshot full -p ~/Pictures/ -d 200 ;;
        $gui) flameshot gui ;;
        $launcher) flameshot launcher ;;
        *) exit 1 ;;
esac
