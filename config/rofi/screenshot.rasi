
@theme "/dev/null"

* {
  bg:			#0C0F09;
  fg:			#05E289;
  button:		#1B1E25;
  background-color:	@bg;
  text-color:		@fg; 
}

window {
  transparency:	"real";
  width:		  100px;
  height:		  260px;
  location: east;
  x-offset: -10px;
}

mainbox { children: [ listview ]; }

listview {
    columns:    2;
    cycle:      true;
    dynamic:    true;
    layout:     vertical;
    padding:    10px;
}


element {
  padding:		0px 0px 0px 0px;
  border-radius:	8px;
}

element-text {
  margin:		10px 10px 10px 10px;
  padding:		5px 5px 5px 5px;
  font:			"Material Design Icon Desktop 35";
  background-color:	inherit;
  text-color:		inherit; 
}
element selected {
  background-color:	#05E289;
  text-color:		#1B1E25;
}

