configuration {
  modi: "drun";
  display-drun: "î§Œ";
  drun-display-format: "{icon} {name}";
  show-icons: true;
  font: "JetBrainsMono Nerd Font 10";
}

@theme "/dev/null"

* {
  bg: #15151533;
  fg: #E8E3E3;
  al: #2e2e2e88;
  background-color: @bg;
  text-color: @fg;
}

window {
  location: north;
  width: 100%;
  children: [ horibox ];
}
prompt {
  font: "feather 12";
  background-color: @al;
  vertical-align: 0.5;
  padding: 0.6em 0.75em;
}
horibox {
  orientation: horizontal;
  children: [ prompt, entry, listview ];
}
listview {
  layout: horizontal;
  spacing: 0.5em;
  lines: 100;
}
entry {
  placeholder: "Search...";
  expand: false;
  width: 25%;
  padding: 0.65em;
}
element {
  padding: 0.65em 0.75em;
}
element selected {
  background-color: @al;
}
element-text, element-icon {
  text-color: inherit;
}

