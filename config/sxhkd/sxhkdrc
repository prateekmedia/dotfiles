#Apps
super + x
  powermenu

super + Return
  kitty

alt + F1
  rofi -show

#Screenshot
Print
  flameshot full -p ~/Pictures/

alt + Print
  flameshot gui

#Workspaces
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces 

super + shift + l
  lock

super + Escape
  bspc wm -r

#Hardware
XF86AudioRaiseVolume 
  changevolume up
XF86AudioLowerVolume 
  changevolume down
XF86AudioMute
  changevolume mute
XF86MonBrightnessUp
  xbacklight +5
XF86MonBrightnessDown
  xbacklight -5

#Window Management
super + Tab
  bspc node -t {floating,tiled}

super + q
  bspc node -c

alt + Tab
  bspc node -f next.local.!hidden.window

super + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

super + shift + {Up,Down,Left,Right}
  bspc node -s {north,south,west,east}

super + space
  bspc node -t \~fullscreen

# Apps
super + shift + w
  firefox

super + shift + f
  pcmanfm || thunar

super + shift + c
  code || codium
