#Variables
set $mod Mod4
set $alt Mod1

#Settings
font pango:Fira Code 10
gaps inner 10
smart_gaps on
smart_gaps inverse_outer
smart_borders on
smart_borders no_gaps
hide_edge_borders smart_no_gaps
new_window normal 0 px
new_window none
default_border none

# Auto Start
exec_always --no-startup-id picom
exec_always --no-startup-id redshift -x && redshift -O 4000k
exec_always --no-startup-id flameshot
exec_always --no-startup-id dunst
exec_always --no-startup-id feh --bg-fill -r -z ~/Pictures/Wallpapers
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

#Apps
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+r exec --no-startup-id rofi -show drun
bindsym $mod+Left resize shrink width 20 px
bindsym $mod+Down resize grow height 20 px
bindsym $mod+Up resize shrink height 20 px
bindsym $mod+Right resize grow width 20 px

#ScreenShot
bindsym Print exec --no-startup-id flameshot gui

#Hardware
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight +5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -5

#Window Management
bindsym $mod+q kill
floating_modifier $mod
bindsym $alt+Tab focus next
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+space fullscreen toggle
bindsym $mod+Tab floating toggle
bindsym $mod+h split h
bindsym $mod+v split v

#workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7

#Others
bindsym $mod+Shift+r restart
bindsym $mod+Shift+l exec sh $HOME/.local/bin/lock
bindsym $mod+Shift+e exit

#Rules
for_window[class="feh"] floating toggle
for_window[class="sxiv"] floating toggle
